    "def get_company_name(ticker):\n",
    "    company=yf.Ticker(ticker)\n",
    "    company_info=company.info\n",
    "    info=company_info.get(\"longBusinessSummary\")\n",
    "    return info[:info.find(\".\")]"
   ]
  },
