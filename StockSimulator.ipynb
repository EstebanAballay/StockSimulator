    "def deposit_money(amount):\n",
    "    if amount.isnumeric() and int(amount) > 0:\n",
    "        wallet[\"money\"]+=int(amount)\n",
    "        save_deposit(amount)\n",
    "    else:\n",
    "        print(\"Invalid input, please enter a number > 0 \\n\")   "
   ]
